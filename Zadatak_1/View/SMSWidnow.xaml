<Window x:Class="Zadatak_1.View.SMSWidnow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:Zadatak_1.View"
        mc:Ignorable="d"
        Title="SMSWidnow" Height="450" Width="800">
    <Grid>
        <Label Content="Phone Number" HorizontalAlignment="Left" Margin="186,53,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneNumber" HorizontalAlignment="Left" Height="23" Margin="289,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Message:" HorizontalAlignment="Left" Margin="187,82,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Message" HorizontalAlignment="Left" Height="236" Margin="187,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="413"/>
        <Button Click="SendMessage" Content="Send" HorizontalAlignment="Left" Margin="187,363,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="525,363,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Example: 381641111111 (5 SMS remaining)" HorizontalAlignment="Left" Margin="187,22,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
